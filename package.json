{
  "name": "src20",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/listener-ts",
    "packages/sender-ts",
    "packages/batch-read-ts"
  ],
  "scripts": {
    "deploy": "cd packages/contracts && ./script/deploy.sh",
    "deploy:batch-read": "cd packages/contracts && ./script/deploy-batched-read.sh",
    "batch-read": "cd packages/batch-read-ts && bun src/index.ts",
    "sender:src20": "bun run --cwd packages/sender-ts dev:src20",
    "sender:erc20": "bun run --cwd packages/sender-ts dev:erc20",
    "listener:src20": "bun run --cwd packages/listener-ts dev:src20 -- --intelligence",
    "listener:erc20": "bun run --cwd packages/listener-ts dev:erc20",
    "format:all": "bun run --cwd packages/sender-ts format && bun run --cwd packages/listener-ts format && bun run --cwd packages/batch-read-ts format"
  }
}
